{
	"name": "grooming-wars",
	"version": "1.0.0",
	"description": "A typescript template project for Phaser 3 using Parceljs",
	"scripts": {
		"install": "yarn --cwd src/server/ install && yarn --cwd src/client/ install",
		"start": "PORT=8082 ts-node-dev --inspect --respawn ./src/index.ts",
		"start:prod": "ts-node ./src/index.ts",
		"build": "yarn && yarn --cwd src/server/ build && yarn --cwd src/client/ build",
		"fix-index": "perl -i -pe's/\\/main/.\\/main/g' dist/index.html",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"author": "nicodebin",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/jsdom": "^16.2.13",
		"@types/node": "^16.11.12",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"canvas": "^2.8.0",
		"datauri": "^4.1.0",
		"express": "^4.17.1",
		"jsdom": "^19.0.0",
		"socket.io": "^4.4.0",
		"ts-node": "^10.4.0",
		"tslib": "^2.3.1"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	},
	"engines": {
		"node": "14.x"
	}
}
