{
	"name": "simple-multiplayer-game-phaser-client",
	"version": "1.0.0",
	"description": "Phaser client",
	"scripts": {
		"start": "parcel src/index.html -p 8050",
		"build": "parcel build src/index.html --out-dir dist && yarn fix-index",
		"fix-index": "perl -i -pe's/\\/main/.\\/main/g' dist/index.html",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"author": "nicodebin",
	"license": "MIT",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"minimist": ">=1.2.2",
		"parcel-bundler": "^1.12.5",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"phaser": "^3.55.2",
		"phaser-animated-tiles": "^2.0.2",
		"socket.io-client": "^4.4.0"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	}
}
