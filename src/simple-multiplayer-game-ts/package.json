{
	"name": "phaser3-parcel-template",
	"version": "1.0.0",
	"description": "A typescript template project for Phaser 3 using Parceljs",
	"scripts": {
		"start": "ts-node ./src/index.ts",
		"build": "parcel build src/server/index.html --out-dir dist && yarn fix-index",
		"fix-index": "perl -i -pe's/\\/main/.\\/main/g' dist/index.html",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"author": "nicodebin",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/node": "^16.11.12",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"eslint": "^6.8.0",
		"minimist": ">=1.2.2",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3",
		"ts-node": "^10.4.0",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"express": "^4.17.1",
		"phaser": "^3.55.2"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	}
}
